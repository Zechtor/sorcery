$navHeight = 50;
$colWidth = 320;
$borderHeight = 1;
$borderStyle = ($borderHeight)px solid #999;
$headerHeight = 40;
$showcaseHeight = 260;
$tabletWidth = 950px
$phoneWidth = 480px;

#layout {
    height: 100%;
    width: 100%;

    // layout sections
    section#nav {
        background-color: $secondaryColor;
        border-bottom: ($borderHeight)px solid #000;
        color: $primaryColor;
        height: ($navHeight)px;
        line-height: ($navHeight)px;
        position: absolute;
        top: 0px;
        width: 100%;
        z-index: 3;

        button {
            display: none;
            padding: 0px 10px;
            position: absolute;

            @media screen and (max-width: $tabletWidth) {
                display:inline-block;
            }
        }

        span {
            display:inline-block;
            text-align: center;
            width:100%;
        }

        #scheduleToggle {
            height: ($navHeight)px;
            left: 0px;
        }

        #tweetToggle {
            height: ($navHeight)px;
            right: 0px;
        }
    }

    section#center {
        padding-top: ($navHeight)px;
        margin: 0px ($colWidth)px;

        @media screen and (max-width: $tabletWidth) {
            margin: 0px;
        }
    }

    section#left {
        border-right: $borderStyle;
        left: 0px;

        @media screen and (max-width: $tabletWidth) {
            transform: translateX(($colWidth * -1)px);

            &.isOpen {
                transform: translateX(0px);
            }
        }

        @media screen and (max-width: $phoneWidth) {
            width: 100%;

            transform: translateX(-1 * 100%);

            &.isOpen {
                transform: translateX(0);
            }
        }
    }

    section#right {
        border-left: $borderStyle;
        right: 0px;

        @media screen and (max-width: $tabletWidth) {
            transform: translateX(($colWidth)px);

            &.isOpen {
                transform: translateX(0px);
            }
        }

        @media screen and (max-width: $phoneWidth) {
            transform: translateX(100%);

            &.isOpen {
                transform: translateX(0);
            }
        }
    }

    section#left, section#right {
        position: absolute;
        top: ($navHeight)px;
        width: ($colWidth)px;
        z-index: 2;
        transition: 0.5s ease-in-out

        @media screen and (max-width: $phoneWidth) {
            width: 100%;
        }
    }

    section#left, section#right, section#center {
        height: "calc(100% - %spx)" % ($navHeight);
    }

    // content sections
    section#showcase {
        height: ($showcaseHeight)px;
        position: relative;
    }

    section#news {
        height: "calc(100% - %spx)" % ($showcaseHeight + $borderHeight);
        position: relative;
    }

    section#schedule {
        height: 100%;
    }

    section#tweets {
        height: 100%;
    }
}

.header {
    background-color: $secondaryColor;
    border-bottom: $borderStyle;
    color: $primaryColor;
    box-shadow: 0px 1px 1px #ccc;
    height: ($headerHeight)px;
    line-height: ($headerHeight)px;
    position: relative;
    text-align:center;
    z-index: 2;

    .refresh {
        height: ($headerHeight)px;
        right: 0px;
        padding: 0px 6px;
        position: absolute;
    }
}

.container {
    background-color: $backgroundColor;
    height: "calc(100% - %spx)" % ($headerHeight - $borderHeight);
    overflow-x: hidden;
    overflow-y: auto;
    position: relative;
    width: 100%;
}

.list {
    list-style-type: none;
}
