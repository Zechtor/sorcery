$navHeight = 50;
$colWidth = 300;
$borderHeight = 1;
$borderStyle = ($borderHeight)px solid black;
$headerHeight = 40;

$tabletWidth = 800px

.layout {
    height: 100%;
    width: 100%;

    // layout sections
    section.nav {
        border-bottom: $borderStyle;
        height: ($navHeight)px;
        line-height: ($navHeight)px;
        position: absolute;
        top: 0px;
        width: 100%;
        z-index: 3;

        button {
            display: none;
            padding: 0px 10px;
            position: absolute;

            @media screen and (max-width: $tabletWidth) {
                display:inline-block;
            }
        }

        span {
            display:inline-block;
            text-align: center;
            width:100%;
        }

        #scheduleToggle {
            height: ($navHeight)px;
            left: 0px;
        }

        #tweetToggle {
            height: ($navHeight)px;
            right: 0px;
        }
    }

    section.center {
        padding-top: ($navHeight)px;
        margin: 0px ($colWidth)px;

        section.news {
            border-top: $borderStyle;
        }

        @media screen and (max-width: $tabletWidth) {
            margin: 0px;
        }
    }

    section.left {
        border-right: $borderStyle;
        left: 0px;

        @media screen and (max-width: $tabletWidth) {
            transform: translateX(($colWidth * -1)px);
        }
    }

    section.right {
        border-left: $borderStyle;
        right: 0px;

        @media screen and (max-width: $tabletWidth) {
            transform: translateX(($colWidth)px);
        }
    }

    section.left, section.right {
        position: absolute;
        top: ($navHeight)px;
        width: ($colWidth)px;
        z-index: 2;
    }

    section.left, section.right, section.center {
        height: "calc(100% - %spx)" % ($navHeight);
    }

    // content sections
    section.showcase {
        height: "calc(50% - %spx)" % ($borderHeight);
        position: relative;
    }

    section.news {
        height: 50%;
        position: relative;
    }

    section.schedule {
        height: 100%;
    }

    section.tweets {
        height: 100%;
    }
}

.header {
    background-color: $backgroundColor;
    border-bottom: $borderStyle;
    height: ($headerHeight)px;
    line-height: ($headerHeight)px;
    text-align:center;
}

.container {
    background-color: $backgroundColor;
    height: "calc(100% - %spx)" % ($headerHeight - $borderHeight);
    overflow-x: hidden;
    overflow-y: auto;
    position: relative;
    width: 100%;
}

.list {
    list-style-type: none;
}
