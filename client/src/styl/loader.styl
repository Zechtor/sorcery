.loader, .partialLoader {
    background-color: $primaryColor;
    height: "calc(100% - %spx)" % ($headerHeight - $borderHeight);
    position:absolute;
    right: 0px;
    top: ($headerHeight + $borderHeight)px;
    width: 100%;
    
    .loading {
        font-size: 0;
        left: 50%;
        position: absolute;
        transform: translate(-50%, -50%);
        top: 50%;

        li {
            animation: LOADING 2s infinite;
            border: 3px solid $accentColor;
            border-radius: 100%;
            height: 6px;
            left: 0;
            position: absolute;
            transform: transformZ(0);
            top: 50%;
            width: 6px;

            &:nth-child(1n) {
                animation-delay: 0s;
                left: -20px;
            }
            
            &:nth-child(2n) {
                animation-delay: 0.2s;
                left: 0;
            }
            
            &:nth-child(3n) {
                animation-delay: 0.4s;
                left: 20px;
            }
        }
    }
}

.partialLoader {
    top: 0px;
    height: 60px;
    position: relative;
}

@keyframes LOADING {
    0% { 
        background: $primaryColor;
        transform: scale(0.5);
    }
    50% { 
        background:$accentColor;
        transform: scale(1);
    }
    100% { 
        background: $primaryCOlor;
        transform: scale(0.5);
    }
}