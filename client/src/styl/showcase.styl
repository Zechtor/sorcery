#showcase {
        
    .row {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        padding: 10px 10px 10px 10px;
        text-align: center;
        
        .team {
            font-size: 18px;
            font-weight: bold;
        }
        
        .vs {
            font-size: 22px;
        }
        
        div {
            align-items: center;
            display: flex;
            justify-content: center;
        }
        
        img {
            height: 130px;
            padding: 0px 12px;
        }
    }
    

    .date {
        margin: auto;
        text-align: center;
        width: 100%;
        text-align: center;
    }

   
}