$showcasePadding = 10;
$teamLogoSize = 90;

#showcase {
    height: ($showcaseHeight)px;
    position: relative;

    .item {
        background-color: #fff;
        border: $borderStyle;
        border-radius: 4px;
        height: "calc(100% - %spx)" % (($showcasePadding * 2) + $listItemMargin);
        margin: ($listItemMargin)px;
        padding: ($showcasePadding)px;
        
        .row {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            padding: 10px 0px;
            text-align: center;
            
            .team {
                font-size: 24px;
                font-weight: bold;
            }
            
            .vs {
                color: #666;
                font-size: 22px;
            }
            
            div {
                align-items: center;
                display: flex;
                justify-content: center;
            }
            
            img {
                height: $teamLogoSize;
                padding: 0px 12px;
            }
        }
        
        .status {
            color: #666;
            margin: 6px auto;
            text-align: center;
            width: 100%;
        }
    }
}