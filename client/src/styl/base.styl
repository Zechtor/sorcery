$primaryColor = #FFFFFF
$secondaryColor = #343131
$accentColor = #2b8ccd;
$backgroundColor = #ececec;

* {
    margin: 0px;
    padding: 0px;
}

html, body {
    background-color: $backgroundColor;
    color: $secondaryColor;
    height: 100%;
    overflow: hidden;
}

a {
    color: $accentColor;
    text-decoration: none;

    &:hover {
        text-decoration: underline;
    }

    &:visited {
        color: $accentColor;
    }   
}

section {
    position: relative;
}