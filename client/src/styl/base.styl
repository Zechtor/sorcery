$accentColor = #2b8ccd;
$primaryColor = #f1f1f1;
$secondaryColor = #333;
//$secondaryColor = #343131

* {
    margin: 0px;
    padding: 0px;
}

html, body {
    background-color: $primaryColor;
    color: $secondaryColor;
    height: 100%;
    overflow: hidden;
}

a {
    color: $accentColor;
    text-decoration: none;

    &:hover {
        text-decoration: underline;
    }

    &:visited {
        color: $accentColor;
    }   
}

section {
    position: relative;
}