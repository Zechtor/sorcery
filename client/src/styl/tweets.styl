$tweetProfileImageSize = 26;
$tweetImageSize = 200;
$tweetVerticalSpacer = 14;

.tweet {

    img {
        margin-bottom: ($tweetVerticalSpacer)px;
        width: 100%
    }

    div {
        margin-top: ($tweetVerticalSpacer)px;

        img {
            border-radius: ($tweetProfileImageSize/2)px;
            height: ($tweetProfileImageSize)px;
            margin-bottom: 0px;
            margin-right: 4px;
            vertical-align: top;
            width: ($tweetProfileImageSize)px;
        }

        a {
            line-height: ($tweetProfileImageSize)px;
        }
    }
}