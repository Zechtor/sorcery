    border-bottom: $borderStyle;

    li {
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
    }

    div {
        margin: ($newsPadding)px ($newsPadding)px ($newsPadding)px 0px;
    }

    h3 {
