$newsPadding = 10;

#news {

    .article {
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        
        &:hover {
            cursor: pointer;
            
            h3 {
                text-decoration: underline;
            }
        }

        img {
            border-radius: 3px;
            background-color: $primaryColor;
            flex: 0 0 100px;
            height: 80px;
            margin-right: ($newsPadding)px;
            object-fit: cover;
        }
        
        h3 {
            color: $accentColor;
            font-size: ($fontSize + 2)px
            margin-bottom:8px;
        }
    }
}