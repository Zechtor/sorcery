$scheduleLogoSize = 60;

#schedule {
    height: 100%;
    position: relative;

    div {
        text-align: center;
    }

    img {
        height: $scheduleLogoSize;
        padding: 0px 8px;
    }
    
    .row {
        align-items: center;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        padding: 5px 0px;
        
        .at {
            align-items: center;
            color: #666;
            display: flex;
            font-size: 13px;
            justify-content: center;
        }
        
        .team {
            align-items: center;
            display: flex;
            font-size: 18px;
            font-weight: bold;
            justify-content: center;
        }
     }
     
     .status {
        color: #666;
        font-size: 13px;
     }
}