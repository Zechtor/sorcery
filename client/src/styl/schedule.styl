#schedule {
    
    div {
        text-align: center;
    }

    img {
        height: 70px;
        padding: 0px 8px;
    }
    
    .row {
        align-items: center;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        padding: 5px 10px 5px 10px;
        
        .at {
            align-items: center;
            color: #666;
            display: flex;
            font-size: 13px;
            justify-content: center;
        }
        
        .team {
            align-items: center;
            display: flex;
            font-size: 18px;
            font-weight: bold;
            justify-content: center;
        }
     }
     
     .date {
        color: #666;
        font-size: 13px;
     }
}